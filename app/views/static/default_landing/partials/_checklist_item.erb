<% 
    raise "Missing 'step' key in text landing page block" unless local_assigns['step']
    raise "Missing 'title' key in text landing page block" unless local_assigns['title']
    raise "Missing 'text' key in text landing page block" unless local_assigns['text']
%>

<div class="Vlt-card Nxd-checklist">
  <div class="Nxd-checklist__item">
    <span><%= local_assigns['step'] %></span>
    <div class="Nxd-checklist__content">
      <h4 class="Vlt-margin--top2"><%= local_assigns['title'] %></h4>
      <p><%= local_assigns['text'].render_markdown %></p>
      <% if local_assigns['link'] %>
        <p class="Vlt-margin--top2"><a href="<%= local_assigns['link']['url'] %>"><%= local_assigns['link']['text'].html_safe %></a></p>
      <% end %>
    </div>
  </div>
</div>
